<% @trips.each do |trip| %>
	<div class ='each_trip' style='border-top: solid black 1px'>
		<p>From: <%=trip.start_city %>, <%= trip.start_state %>  On: <%= trip.start_date.to_time.strftime('%B %e 20%y') %></p>
		<p>To: <%=trip.end_city %>, <%= trip.end_state %> On: <%= trip.end_date.to_time.strftime('%B %e 20%y') %> </p>
		<p> Driver: <%= link_to trip.driver.first_name %> </p>
		<p>Passengers: <%= trip.passengers.length %>/<%= trip.num_passengers %> </p>
		<p><%= link_to 'Show', trip %> </p>
	</div>




<script id="trips-template" type="text/x-handlebars-template">
    {{#each trip}}
        <div class ='each_trip' style='border-top: solid black 1px'>
        <p>From: {{start_city}}, {{start_state}} On: {{start_date}} </p>
        <p>To: {{end_city}}, {{end_state}} On: {{end_date}}  </p>

        <p>Driver: {{driver_first}} {{driver_last}}  </p>

    	<p>Passengers: {{passenger_count}}/{{num_passengers}}  </p>

        <p><a href='/trips/{{id}}'>Show</a></p>


        </div>
    {{/each}}
</script>
    <% end %>