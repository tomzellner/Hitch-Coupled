<!DOCTYPE html>
<html>
<head>
  <title>Hitch</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
  <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<link href='http://fonts.googleapis.com/css?family=Lato&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
</head>
<body>

 <div id='header' >



      <% if current_user %>

      <table id="nav_buttons">
        <tr>
          <div id="nav1">
          <td>
            <%= link_to home_index_path do %>
              <%= image_tag "steering_wheel.png", :class => "nav_button" %>
            <%end%>
          <td>
          </div>
          <div id="nav2">
          <td>
            <%= link_to user_path(current_user) do %>
              <%= image_tag current_user.profile_pic, :class => "nav_button" %>
            <%end%>
          <td>
            </div>
          <div id="nav3">
          <td>
          <%= link_to conversations_path do %>
            <%= image_tag "message_icon.png", :class => "nav_button" %>
          <% end %>
          </td>
          <div>
          <td>
          <%= link_to '<button>Sign Out</button>'.html_safe, "/users/sign_out", class:"sign_out", method: :delete %>
          </td>
        </tr>
      </table>

      <% else %>


       <form  action="/users/sign_in">
        <input type="submit" value="Sign In">
      </form>

       <form action="/users/sign_up">
        <input type="submit" value="Sign Up">
      </form>


      <% end %>


  </div>


  <div class='container'>

    <%= yield %>

  </div>


</body>
</html>