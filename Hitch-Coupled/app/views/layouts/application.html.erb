<!DOCTYPE html>
<html>
<head>

  <title>Hitch</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>


  <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
  <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<link href='http://fonts.googleapis.com/css?family=Lato&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
</head>
<body>

 <div id='header' >
  <%= image_tag "hitch_logo.png", :class => "nav_button_logo" %>


      <% if current_user %>

      <table id="nav_buttons">

        <tr>
          <td>
            <%= link_to home_index_path do %>
              <%= image_tag "steering_wheel_orange.png", :class => "nav_button1" %>
            <%end%>
          </td>


          <td>
            <%= link_to user_path(current_user) do %>
              <%= image_tag current_user.profile_pic, :class => "nav_button2" %>
            <%end%>
          </td>


          <td>
          <%= link_to conversations_path do %>
            <%= image_tag "message_icon.png", :class => "nav_button3" %>
          <% end %>
          </td>

          <td>
          <%= link_to '<button>Sign Out</button>'.html_safe, "/users/sign_out", class:"sign_out", method: :delete %>
          </td>
        </tr>
      </table>







      <% end %>


  </div>




    <%= yield %>




</body>
</html>
