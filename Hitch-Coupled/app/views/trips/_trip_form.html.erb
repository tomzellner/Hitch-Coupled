
<% if @trip.errors.any? %>
    <% @trip.errors.full_messages.each do |msg| %>
      <li style='color: red;'><%= msg %></li>
    <% end %>
<% end %>


<label>Create new trip here</label><br>
      <%= form_for @trip do |f| %>
   <p>
        <%= f.label(:start_city, 'Start City:') %> <br>
        <%= f.text_field(:start_city, :placeholder => "Start City") %>
        <%= f.select(:start_state, options_for_select(us_states), {:prompt => 'Select State'}) %>
        <%= f.date_field(:start_date) %>
    </p>

    <p>
        <%= f.label(:end_city, 'End City') %>
    <br>
        <%= f.text_field(:end_city, :placeholder => "End City") %>
        <%= f.select(:end_state, options_for_select(us_states), {:prompt => 'Select State'} )%>
        <%= f.date_field(:end_date) %>
    </p>

   <!--  <p>
        <%# f.label(:start_date, 'Start Date') %>
    <br>
    </p> -->

    <!-- <p>
        <%# f.label(:end_date, 'End Date') %>
    <br>
    </p> -->
    <p>
        <%= f.label(:car_id, 'Car') %>
    <br>
        <%= f.select(:car_id, options_for_select(current_user_cars)) %>
    </p>
    <p>
        <%= f.label(:num_passengers, 'Number of Passengers') %>
    <br>
        <%= f.select(:num_passengers, options_for_select(1..7)) %>
    </p>

    <p>
        <%= f.submit('Create Trip') %>
    </p>

      <% end %>
