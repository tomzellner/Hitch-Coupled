<head>
<style>


</style>
<script>
function allowDrop(ev) {
    ev.preventDefault();
}

function drag(ev) {
    ev.dataTransfer.setData("text", ev.target.id);
}

function drop(ev) {
    ev.preventDefault();
    var data = ev.dataTransfer.getData("text");
    ev.target.appendChild(document.getElementById(data));
}
</script>
</head>

<body>


<% if current_user == @driver %>
	<h2>Welcome to Your Trip </h2>
	<%= link_to 'edit trip', edit_trip_path %>

  	<% if !@trip.started %>
  		<h3> Waiting for Trip to start </h3>
  		<%= button_to "Start", { action: "start", trip_id: @trip.id },
                                  method: :patch, data: { confirm: "Are you sure?" } %>
    <% elsif @trip.ended %>
      	<h3> Trip Ended </h3>

  	<% elsif @trip.started %>
  		<h3> Trip in Progress </h3>
  		<%= button_to "End", { action: "end", trip_id: @trip.id },
                                  method: :patch, data: { confirm: "Are you sure?" } %>
  	<% end %>

<% else %>
	<h2><%= @trip.start_city + ", " + @trip.start_state + " to " + @trip.end_city + ", " + @trip.end_state %> </h2>

	<% if !@trip.started %>
		<h3> Waiting for Trip to Start </h3>
	<% elsif @trip.ended %>
    	<h3> Trip Ended </h3>
	<% elsif @trip.started %>
		<h3> Trip in Progress </h3>
	<% end %>

  <% unless interested_parties.include?(current_user) %>
      <%= render '/trips/interested_passenger_form' %>
  <%end %>

<% end %>

<p  id='start_geog' class ='<%=start_geo%>'>  </p>
<p  id='end_geog' class = '<%=end_geo%>'>  </p>

<div class='col span_12' >
  <div id="directions" class='col span_12' style= 'height: 20em'>

  </div>
</div>


<div>
	<h4>From: <%= @trip.start_city %>, <%= @trip.start_state %></h4>
	<h4>To: <%= @trip.end_city %>, <%= @trip.end_state %></h4>
	<h4>Start Date: <%= @trip.start_date.to_time.strftime('%B %e 20%y') %></h4>
	<h4>End Date: <%= @trip.end_date.to_time.strftime('%B %e 20%y') %></h4>
  <h4> Seat Available: <%= @trip.num_passengers - @trip.passengers.count %></h4>

</div>
<!-- DRIVERS DIV -->
<div>
<div>
  <h3>Driver: </h3>
</div>
<%= link_to user_path(@driver) do  %>
	<div id = 'driver_profile'>

		<%= image_tag @driver.profile_pic, :class => "avatars" %>
    <p><%= @driver.first_name.capitalize + " " + @driver.last_name.capitalize %></p>
	</div>
  <div>
    <% if @trip.ended && @trip.passengers.include?(current_user) && !current_user == @driver%>
			<%= form_for @rating do |f| %>
				<%= f.hidden_field :rater_id, :value => current_user.id %>
				<%= f.hidden_field :rated_id, :value => @driver.id %>
				<%= f.label(:score, 'Score') %>
				<%= f.select(:score, options_for_select(1..5)) %>
				<%= f.submit('Rate') %>
			<% end %>
		<% end %>
	</div>
<% end %>
</div>




 <!-- PASSENGERS DVIS -->
<div>
  <h3>Passengers:</h3>
</div>
  <% @trip.passengers.each do |p| %>
	 <%= link_to user_path(p) do  %>

		<div style="border: thin solid black" >
			<%= image_tag p.profile_pic, :class => "avatars" %>
      <p><%= p.first_name.capitalize + " " + p.last_name.capitalize %></p>
		<% if @trip.ended && (@trip.passengers.include?(current_user) || @driver == current_user) && p.id != current_user.id  %>

			<%= form_for @rating do |f| %>
				<%= f.hidden_field :rater_id, :value => current_user.id %>
				<%= f.hidden_field :rated_id, :value => p.id %>
				<%= f.label(:score, 'Score') %>
				<%= f.select(:score, options_for_select(1..5)) %>
				<%= f.submit('Rate') %>
			<% end %>
		<% end %>
		</div>
	<% end %>
<% end %>

<!-- Car DIV -->
<div>
  <h3>Car: <%= @car.year.to_s + " " + @car.make + " " + @car.model + " (" + @car.seats.to_s + " Seats)" %></h3>
</div>
<div>
  <%= image_tag @car.car_pic, :id => "car_trip_show" %>
</div>



