<div id='homediv'>

<% if user_signed_in? %>
	<div id="headerz">
	<h1>What would you like to do?</h1>
</div>

	<div id = 'driver_story col' class = 'col span_6'>

		<%= link_to image_tag('Untitled.jpg', :class => 'col span_6', id: 'driver_pic'), new_trip_path%>

	</div>

	<div id = 'passenger_story' class = 'col span_6'>
		<%= link_to image_tag('Passenger.png',  :class => 'col span_6', id: 'passenger_pic'), trips_path %>

	</div>
</div>
<% else %>
	<h1>Please Sign In</h1>

<% end %>


</div>

<% if user_signed_in?  %>
	<div hidden class = 'container' id = 'hidden_form' >
		<%= render "trips/trip_form" %>
	</div>


<% end %>